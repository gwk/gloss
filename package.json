{
  "name": "gloss",
  "displayName": "gloss",
  "description": "Aggressive configuration.",
  "version": "1.0.0",
  "publisher": "gwk",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "languages": [
      { "id": "javascript",
        "aliases": [
          "JavaScript",
          "javascript",
          "js"],
        "extensions": [
          ".js"],
        "firstLine": "^#!.*\\bnode( -.+)?",
        "mimetypes": [
          "text/javascript"]
      },
      { "id": "swift",
        "aliases": ["Swift","swift"],
        "extensions": [".swift"],
        "firstLine": "^#!.*\\bswift( -.+)?",
        "configuration": "./configurations/swift-gloss.json"
      }
    ],
    "grammars": [{
      "language": "swift",
      "scopeName": "source.swift",
      "path": "./syntaxes/swift-gloss.json"
    }],
    "themes": [
      {
        "label": "gloss-black",
        "uiTheme": "vs-dark",
        "path": "./themes/gloss-black.json"
      }
    ]
  }
}
