{
  "name": "gloss",
  "displayName": "gloss",
  "description": "Various enhancements for VSCode.",
  "version": "1.0.0",
  "publisher": "gwk",
  "repository": "https://github.com/gwk/gloss",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "contributes": {
    "languages": [
      {
        "id": "javascript",
        "firstLine": "^#!.*\\bnode( +-.+)?"
      },
      {
        "id": "m4",
        "aliases": [
          "m4",
          "autoconf"
        ],
        "extensions": [
          ".ac",
          ".m4"
        ],
        "filenames": [
          "configure.in"
        ]
      },
      {
        "id": "makefile",
        "filenames": [
          "makefile",
          "makefile.pre",
          "makefile.pre.in",
          "GNUmakefile",
          "OCamlMakefile"
        ]
      },
      {
        "id": "toml",
        "extensions": [
          ".toml"
        ],
        "scopeName": "source.toml"
      },
      {
        "id": "xcode",
        "extensions": [
          ".pbxproj"
        ],
        "firstLine": "// !\\$\\*UTF8\\*\\$!",
        "configuration": "./configurations/xcode.json"
      }
    ],
    "grammars": [
      {
        "language": "m4",
        "scopeName": "source.m4",
        "path": "./grammars/m4.json"
      },
      {
        "language": "toml",
        "scopeName": "source.toml",
        "path": "./grammars/toml.json"
      },
      {
        "language": "xcode",
        "scopeName": "source.xcode",
        "path": "./grammars/xcode.json"
      }
    ],
    "themes": [
      {
        "label": "gloss-black",
        "uiTheme": "vs-dark",
        "path": "./themes/gloss-black.json"
      }
    ]
  }
}
