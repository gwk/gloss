{
  "name": "VRL",
  "fileTypes": [
    "vrl"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#regex"
    },
    {
      "include": "#timestamps"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#paths"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.vrl",
      "match": "#.*$"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vrl",
          "match": "\\b(abort|if|else|for|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.vrl",
          "match": "\\b(as|in|let|then|use|while)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.vrl",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.vrl",
          "match": "\\bnull\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vrl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vrl",
              "match": "\\\\[\"'0\\\\nrt]"
            },
            {
              "name": "constant.character.escape.unicode.vrl",
              "match": "\\\\u\\{[0-9a-fA-F]+\\}"
            },
            {
              "name": "variable.interpolation.vrl",
              "match": "\\{\\{[^}]+\\}\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.raw.vrl",
          "begin": "s'",
          "end": "'"
        }
      ]
    },
    "regex": {
      "name": "string.regexp.vrl",
      "begin": "r'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.vrl",
          "match": "\\\\."
        }
      ]
    },
    "timestamps": {
      "name": "string.timestamp.vrl",
      "begin": "t'",
      "end": "'"
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.vrl",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.vrl",
          "match": "\\b\\d+(_\\d+)*\\b"
        }
      ]
    },
    "paths": {
      "patterns": [
        {
          "name": "variable.other.path.vrl",
          "match": "\\.[a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*"
        },
        {
          "name": "variable.other.path.vrl",
          "match": "\\.\"[^\"]+\""
        },
        {
          "name": "variable.other.metadata.vrl",
          "match": "%[a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*"
        },
        {
          "name": "variable.other.path.vrl",
          "match": "\\[[0-9]+\\]"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.vrl",
          "match": "\\b[a-z_][a-z0-9_]*(?=\\s*\\()"
        },
        {
          "name": "support.function.vrl",
          "match": "\\b[a-z_][a-z0-9_]*!"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.vrl",
          "match": "=|\\|="
        },
        {
          "name": "keyword.operator.comparison.vrl",
          "match": "==|!=|<=?|>=?"
        },
        {
          "name": "keyword.operator.logical.vrl",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.vrl",
          "match": "\\+|-|\\*|/"
        },
        {
          "name": "keyword.operator.null-coalescing.vrl",
          "match": "\\?\\?"
        }
      ]
    },
    "variables": {
      "name": "variable.other.vrl",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    }
  },
  "scopeName": "source.vrl"
}
